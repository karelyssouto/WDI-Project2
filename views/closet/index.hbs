  {{#each category}}
<div class="columns is-centered">
  
    <div class="column is-full-mobile is-one-third-tablet is-one-third-desktop is-one-third-widescreen is-one-third-fullhd">
    
<div class="tile is-ancestor">
    <div class="tile is-vertical">
        <article class="tile is-child box is-vertical">
            <figure class="image is-4by3">
                <a href="/users/{{../userId}}/closets/{{_id}}"><img src="{{img}}"></a>
            </figure>
            <form action="/users/{{../userId}}/closets/{{_id}}?_method=DELETE" method="POST">
                <button class="button is-black" type="submit">Delete</button>
            </form>           
        </article>
    </div>
{{/each}}


</div>
