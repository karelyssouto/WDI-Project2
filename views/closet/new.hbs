<div class="container">
    <div class="container tile is-ancestor">
        <div class="container tile is-8" style="padding-top:10%">
            <div class="tile">

                <div class="tile is-parent">
                    <article class="tile is-child notification" style="background:peachpuff">
                        <p class="title">Add pictures to your Virtual Closet</p>
                        <p class="subtitle">Share it with others below.</p>
                        <form action="/users/{{userId}}/closets" method="POST">
                            <div class="field">
                                <label class="label"></label>
                                <div class="control">
                                    <input class="input" type="text" name="img" placeholder="Image url" value="">                               
                                </div>
                            </div>

                            <button class="button is-black" type="submit">Post</button>
                            <a href="/users/{{userId}}/closets/{{closetid}}" class="button is-light">Back</a>
                        </form>
                    </article>
                </div>
            </div>


        </div>
    </div>