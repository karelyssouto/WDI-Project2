<div class="container" style="padding-top:10%">
    <div class="tile container is-ancestor">
    <div class="tile container is-vertical is-8">
        <div class="tile">
 
            <div class="tile is-parent">
                <article class="tile is-child notification" style="background: peachpuff">
                    <p class="title">Welcome to Virtual Closet</p>
                    <p class="subtitle">Create your user below.</p>
                        <form action="/users" method="POST">
                            <div class="field">
                                <label class="label"></label>
                                <div class="control">
                                    <input class="input" type="text" name="name" placeholder="Name" value="">
                                </div>
                            </div>
                        
                            <div class="field">
                                <label class="label"></label>
                                <div class="control">
                                    <input class="input" type="email" name="email"placeholder="Email" value="">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label"></label>
                                <div class="control">
                                    <input class="input" type="text" name="img" placeholder="Image url" value="">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label"></label>
                                <div class="control">
                                    <input class="input" type="text" name="style" placeholder="What's your style" value="">
                                </div>
                            </div>
                            <button class="button is-black" type="submit">Post</button>
                            <a href="/users/{{userId}}" class="button is-light">Back</a>
                        </form>
                </article>
            </div>
        </div>


    </div>
</div>
